<div class="container">
    <div class="row">
        <div class="col-md-8 col-12 mx-auto">
            <div class="card m-3">
                <div class="card-body">
                    <h3 class="card-title text-center">Account Login</h3>
                </div>
                <form action="/" method="POST">
                    <div class="form-group">
                        <input type="email" class="form-control" id="txbEmail" name="txbEmail" aria-describedby="emailHelp" placeholder="Email" value="{{txbEmail}}">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" id="txbPassword" name="txbPassword" placeholder="Password" value="{{txbPassword}}">
                    </div>
                    {{#if message}}
                        <i class="fas fa-info-circle text-danger "></i><span class="text-danger text-center">{{message}}</span>
                    {{/if}}
                    <div class="row justify-content-center">
                        <div class="m-3">
                            <button type="submit" class="btn btn-outline-dark">Sign in</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>